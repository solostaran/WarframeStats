extends layout

block content
	script(nonce=nonce).
		document.getElementById('nav-stats').classList.add('active');

	div(class='container-lg')
		div(class='row m-1')
			if (rivenStats)
				h3= title
				p A total of #{rivenStats.count} rivens
				div(class='row')
					table(class='table table-responsive table-striped table-hover')
						thead
							th Riven type
							th(style='padding-right:15px;') Count
							th Percentage
						tbody
							for value, key in rivenStats.stats
								tr
									td(style='padding-right:15px;')= key
									td= value
									td= Number.parseFloat(value * 100 / rivenStats.count).toFixed(1) + '%'
			else
				h2 No stats !
